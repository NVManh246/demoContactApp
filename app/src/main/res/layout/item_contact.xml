<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_5"
    >

    <TextView
        android:id="@+id/text_contact"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_5"
        android:gravity="center"
        android:textSize="@dimen/sp_25"
        android:textColor="@android:color/white"
        android:background="@drawable/background_circle"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/text_contact"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/dp_5"
        >

        <TextView
            android:id="@+id/text_display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_contact"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/text_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_contact"
            android:layout_below="@+id/text_display_name"
            android:textColor="@android:color/black"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/image_call"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/dp_5"
        android:src="@drawable/ic_phone_black_24dp"
        android:background="@drawable/background_button_call"
        />

    <ImageView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/image_call"
        android:layout_margin="@dimen/dp_5"
        android:src="@drawable/ic_star_border_black_24dp"
        />

</RelativeLayout>
